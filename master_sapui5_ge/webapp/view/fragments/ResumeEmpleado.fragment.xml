<c:FragmentDefinition xmlns="sap.m" xmlns:c="sap.ui.core">
    <Page title="{i18n>titleResumenEmpleado}" titleAlignment="Center" showFooter="true">
        <Panel headerText="{i18n>titleResumen}">
            <FlexBox width="100%">
                <HBox width="50%">
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Tipo" />
                        <Text text="{/_type}" />
                    </HBox>
                </HBox>
                <HBox width="50%">
                    <Button text="Editar" press="onEditSetp1" />
                </HBox>
            </FlexBox>
        </Panel>
        <Panel headerText="{i18n>dataEmployee}">
            <FlexBox width="100%">
                <VBox width="50%">
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Nombre:" />
                        <Text text=" {/FirstName}" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Apellido: " />
                        <Text text="{/LastName}" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="DNI: " />
                        <Label text="{/Dni}" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="{= ${/_type} === 'autonomo' ? 'Precio Diario' : 'Salario Bruto Anual'}" />
                        <Label text="{/_Salary}" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Fecha incorporacion: " />
                        <Label text="{path:'/CreationDate',type:'sap.ui.model.type.Date'}" />
                    </HBox>
                </VBox>

                <HBox width="50%">
                    <Button text="Editar" press="onEditSetp2" />
                </HBox>
            </FlexBox>
        </Panel>
        <Panel headerText="{i18n>infoEmployee}">
            <FlexBox width="100%">
                <VBox width="50%">
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Comentario" />
                        <Label text="{/Comments}" />
                    </HBox>
                    <HBox justifyContent="SpaceBetween" width="40%">
                        <Label text="Documentos" />
                        <Label text="{/_NumFiles} Archivos" />
                        <VBox items="{/Files}">
                            <items>
                                <StandardListItem title="{DocName}" />
                            </items>
                        </VBox>
                    </HBox>
                </VBox>
                <HBox width="50%">
                    <Button text="Editar" press="onEditSetp3" />
                </HBox>
            </FlexBox>
        </Panel>
    </Page>
</c:FragmentDefinition>
